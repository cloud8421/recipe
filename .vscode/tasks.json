{
  "version": "2.0.0",
  "suppressTaskName": true,
  "tasks": [
    {
      "type":"shell",
      "command": "mix compile",
      "taskName": "compile",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
         "reveal": "silent"
      }
    },
    {
      "type":"shell",
      "taskName": "test",
      "command": "mix test",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
         "reveal": "always"
      }
    },
    {
      "type":"shell",
      "taskName": "test file",
      "command": "mix test ${relativeFile}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
         "reveal": "always"
      }
    },
    {
      "type":"shell",
      "taskName": "test file at line",
      "command": "mix test ${relativeFile}:${lineNumber}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
         "reveal": "always"
      }
    }
  ]
}